<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlin_Lessons" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#150101</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#975C14</item>
        <item name="colorSecondaryVariant">#EFA74D</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/textColor_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/bottom_nav_menu</item>
    </style>

    <style name="SwitchStyle" >
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackTint">@color/selector_color</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.DayNight">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">#FFFFFF</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">#4C4C4C</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">#000000</item>
    </style>


    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/medium</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Theme.Kotlin_Lessons.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
